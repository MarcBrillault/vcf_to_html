<!DOCTYPE html>
<html>
    <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1>Tous les contacts ({{ cards|length }})</h1>

            {% for card in cards %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ card.getFullname }}</h5>
                    {# <h6 class="card-subtitle mb-2 text-body-secondary">Card subtitle</h6> #}

                    {% if card.getTels|length > 0 %}
                    <ul>
                        {% for tel in card.getTels %}
                        <li>{{ tel }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}

                    {% if card.getEmails|length > 0 %}
                    <ul>
                        {% for email in card.getEmails %}
                        <li>{{ email }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                
                </div>
            </div>
            {% endfor %}
        </div>
    </body>
</html>